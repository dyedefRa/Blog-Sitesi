<h2 class="text-center text-danger">Makalelerim</h2>

<p>
    @Html.ActionLink("Yeni Makale Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kategori Adı :")
        </th>

        <th>
            @Html.DisplayName("Başlık :")
        </th>
        <th>
            @Html.DisplayName("İçerik :")
        </th>
        <th>
            @Html.DisplayName("Oluşturulma Tarihi :")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.Ad)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Extreme.YaziKarakterSinirlandirma(item.Icerik, 30)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
