@model Blog.UI.Models.Makale
@using Blog.UI.App_Classes

@{
    ViewBag.Title = "Delete";


}

@if (TempData["makaleSilSorunu"]!=null)
{
<p class="uyari">@TempData["makaleSilSorunu"]</p>
}

<h3>Bu makaleyi silmek istediğine emin misiniz? </h3>
<div>
    @Html.HiddenFor(model=>model.KullaniciID)
    <hr /> 
    <h2 class="text-center text-danger">Yazarı : @Model.Kullanici.KullaniciAdi</h2>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Kategori :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Kategori.Ad)
        </dd>



        <dt>
            @Html.DisplayName("Başlık :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Baslik)
        </dd>

        <dt>
            @Html.DisplayName("İçerik :")
        </dt>

        <dd>
            @Extreme.YaziKarakterSinirlandirma(Model.Icerik, 100)
        </dd>



    </dl>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a class="btn btn-info" href="/Makale">Makalelere Dön</a>
        </div>
    }
</div>
